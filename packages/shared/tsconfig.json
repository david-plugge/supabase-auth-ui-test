{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "target": "ES2022",
    "module": "ES2022"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
